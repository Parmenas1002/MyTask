<div class="container">
    <div class="row justify-content-center align-content-center">
        <div class= "col-lg-5 col-md-8 col-sm-12 col-xl-4">
            <div class="card p-3 mb-3 bg-white" >
                <div class="card-header pl-4 pb-0 text-center" style="border: none; background-color:white;">
                    <%= image_tag "myTask.png", height: 80, width: 80 %>         
                </div>
                <div class="card-body">
                    <%= form_with(model: @tag, local: true, url: choose_new_or_edit) do |form| %>
                        <div class="form-group">
                            <%= form.text_field :name, class: "form-control bg-light small", required: true, placeholder: "Tag name" %>
                        </div>
                        
                        <div class="row justify-content-center mb-3 mt-4">
                            <div class="col-md-12 text-center">
                                 <% if action_name == "new"%>
                                    <%= form.submit "Create Tag", class:"btn btn-primary font-weight-bold pl-5 pr-5" %>
                                <% else %>
                                    <%= form.submit "Edit Tag", class:"btn btn-primary font-weight-bold pl-5 pr-5" %>
                                <% end %>
                            </div>
                        </div>
                    <% end %>
                </div>  
            </div>
        </div> 
    </div>
</div>
<div class="d-block text-center">
    <p><%= link_to "Back", admin_users_path, class: "btn btn-primary text-white" %></p>
</div>
